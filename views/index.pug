extends layout

block content
    h1= title
    p Welcome to #{title}
    this is assignment 10 
    button(type="button", class="btn btn-success", onclick = "doBump()") Press Here
    div(id='bump') Bump the count

    script.  
      var count = 0
      var bump = 1
      function doBump() {
        count = count + bump 
        bump = bump + 1
        document.getElementById("bump").innerHTML = "Count "+ count +" Bump "+bump;
      }
